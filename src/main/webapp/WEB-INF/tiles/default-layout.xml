<tiles-definitions>
	<definition name="layouts-tiles" template="/WEB-INF/views/cmmn/user-layouts.jsp">
	  	<put-attribute name="header"    	value="/WEB-INF/views/cmmn/user-header.jsp" />
	  	<put-attribute name="nav"    		value="/WEB-INF/views/cmmn/user-nav.jsp" />
	  	<put-attribute name="content"   	value="" />
	  	<put-attribute name="footer"    	value="/WEB-INF/views/cmmn/user-footer.jsp" />
	  	<put-attribute name="js"    		value="/WEB-INF/views/cmmn/user-js.jsp" />
	</definition>
	
	<definition name="user/*/*.tiles" extends="layouts-tiles">
	  	<put-attribute name="content"   value="/WEB-INF/views/user/{1}/{2}.jsp" />
	</definition>
	
	<definition name="layouts-tilesAdmin" template="/WEB-INF/views/cmmn/admin-layouts.jsp">
	  	<put-attribute name="header"    	value="/WEB-INF/views/cmmn/admin-header.jsp" />
