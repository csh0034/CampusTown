	  	<put-attribute name="content"   	value="" />
	  	<put-attribute name="footer"    	value="/WEB-INF/views/cmmn/admin-footer.jsp" />
	  	<put-attribute name="js"    		value="/WEB-INF/views/cmmn/admin-js.jsp" />
	</definition>
	
	<definition name="admin/*/*.tilesAdmin" extends="layouts-tilesAdmin">
	  	<put-attribute name="content"   value="/WEB-INF/views/admin/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>


